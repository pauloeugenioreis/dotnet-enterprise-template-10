# ==============================================================================
# .NET 10 Clean Architecture Template - Environment Variables Example
# ==============================================================================
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------------------------
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# Options: EntityFrameworkCore, Dapper, NHibernate, Linq2Db
DATABASE_PROVIDER=EntityFrameworkCore

# SQL Server (Default)
CONNECTION_STRING=Server=localhost;Database=ProjectTemplate;User Id=sa;Password=YourStrong@Password123;TrustServerCertificate=True;

# PostgreSQL (Alternative)
# CONNECTION_STRING=Host=localhost;Port=5432;Database=projecttemplate;Username=postgres;Password=YourPassword123;

# MySQL (Alternative)
# CONNECTION_STRING=Server=localhost;Port=3306;Database=projecttemplate;User=root;Password=YourPassword123;

# Oracle (Alternative)
# CONNECTION_STRING=User Id=system;Password=YourPassword123;Data Source=localhost:1521/XE;

# ------------------------------------------------------------------------------
# Cache Configuration
# ------------------------------------------------------------------------------
# Options: Memory, Redis, SqlServer
CACHE_PROVIDER=Memory
CACHE_ENABLED=true
CACHE_EXPIRATION_MINUTES=60

# Redis Cache (Production)
# CACHE_PROVIDER=Redis
# REDIS_CONNECTION_STRING=localhost:6379,password=YourRedisPassword,ssl=false,abortConnect=false

# SQL Server Cache (Alternative)
# CACHE_PROVIDER=SqlServer
# CACHE_CONNECTION_STRING=Server=localhost;Database=ProjectTemplateCache;User Id=sa;Password=YourPassword123;TrustServerCertificate=True;

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
LOG_LEVEL=Information
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# ------------------------------------------------------------------------------
# Authentication & Authorization (Future)
# ------------------------------------------------------------------------------
# JWT_SECRET=your-secret-key-min-32-characters-long
# JWT_ISSUER=https://yourapp.com
# JWT_AUDIENCE=https://yourapp.com
# JWT_EXPIRATION_HOURS=24

# OAuth2 (Future)
# OAUTH2_CLIENT_ID=your-client-id
# OAUTH2_CLIENT_SECRET=your-client-secret
# OAUTH2_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# ------------------------------------------------------------------------------
# External Services (Future)
# ------------------------------------------------------------------------------
# Azure Storage
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net

# SendGrid Email
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourapp.com

# Twilio SMS
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# ------------------------------------------------------------------------------
# Message Broker (Future)
# ------------------------------------------------------------------------------
# RabbitMQ
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USERNAME=guest
# RABBITMQ_PASSWORD=guest

# Azure Service Bus
# AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://yournamespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=yourkey

# ------------------------------------------------------------------------------
# Monitoring & Observability
# ------------------------------------------------------------------------------
# Application Insights
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://region.in.applicationinsights.azure.com/

# OpenTelemetry
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=projecttemplate-api
# OTEL_SERVICE_VERSION=1.0.0

# ------------------------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:4200,https://yourapp.com
CORS_ALLOW_CREDENTIALS=true

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ------------------------------------------------------------------------------
# Health Checks
# ------------------------------------------------------------------------------
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_READY_PATH=/health/ready

# ------------------------------------------------------------------------------
# Swagger Configuration
# ------------------------------------------------------------------------------
SWAGGER_ENABLED=true
SWAGGER_ENDPOINT=/swagger
SWAGGER_TITLE=ProjectTemplate API
SWAGGER_VERSION=v1

# ------------------------------------------------------------------------------
# Kubernetes (Production)
# ------------------------------------------------------------------------------
# K8S_NAMESPACE=projecttemplate
# K8S_SERVICE_NAME=projecttemplate-api
# K8S_CLUSTER_NAME=production-cluster

# ------------------------------------------------------------------------------
# Docker Configuration
# ------------------------------------------------------------------------------
# DOCKER_REGISTRY=youracr.azurecr.io
# DOCKER_IMAGE_NAME=projecttemplate-api
# DOCKER_IMAGE_TAG=latest

# ------------------------------------------------------------------------------
# Feature Flags (Future)
# ------------------------------------------------------------------------------
# FEATURE_NEW_DASHBOARD=true
# FEATURE_BETA_API=false
# FEATURE_ANALYTICS=true

# ------------------------------------------------------------------------------
# Security
# ------------------------------------------------------------------------------
# HTTPS_PORT=5001
# SSL_CERTIFICATE_PATH=/app/certificates/cert.pfx
# SSL_CERTIFICATE_PASSWORD=YourCertPassword

# ------------------------------------------------------------------------------
# Performance
# ------------------------------------------------------------------------------
MAX_REQUEST_BODY_SIZE=10485760
REQUEST_TIMEOUT_SECONDS=30
ENABLE_RESPONSE_COMPRESSION=true

# ------------------------------------------------------------------------------
# Development Tools
# ------------------------------------------------------------------------------
ENABLE_SWAGGER_UI=true
ENABLE_DEVELOPER_EXCEPTION_PAGE=true
ENABLE_DETAILED_ERRORS=true

# ------------------------------------------------------------------------------
# Background Jobs (Future)
# ------------------------------------------------------------------------------
# HANGFIRE_CONNECTION_STRING=Server=localhost;Database=ProjectTemplateHangfire;User Id=sa;Password=YourPassword123;TrustServerCertificate=True;
# HANGFIRE_DASHBOARD_PATH=/hangfire
# HANGFIRE_WORKERS=5

# ==============================================================================
# IMPORTANT NOTES:
# ==============================================================================
# 1. Never commit .env file with real credentials to source control
# 2. Use Azure Key Vault, AWS Secrets Manager, or similar for production secrets
# 3. Rotate credentials regularly
# 4. Use different credentials for each environment (dev, staging, prod)
# 5. Follow the principle of least privilege
# ==============================================================================
