{
  "AppSettings": {
    "EnvironmentName": "Development",
    "ConnectionStrings": {
      "DefaultConnection": "Server=localhost;Database=ProjectTemplate;Trusted_Connection=True;TrustServerCertificate=True;",
      "ReadOnlyConnection": ""
    },
    "Infrastructure": {
      "Cache": {
        "Enabled": true,
        "Provider": "Memory",
        "ConnectionString": "",
        "DefaultExpirationMinutes": 60
      },
      "Database": {
        "Provider": "EntityFramework",
        "DatabaseType": "SqlServer",
        "CommandTimeout": 30,
        "EnableSensitiveDataLogging": true
      }
    },
    "Authentication": {
      "Jwt": {
        "Secret": "your-secret-key-change-this-in-production",
        "Issuer": "ProjectTemplate",
        "Audience": "ProjectTemplate",
        "ExpirationMinutes": 60
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*"
}
